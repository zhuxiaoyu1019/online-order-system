<body class="dashboard">
    <div class="row">
        <div class="col s6 back-button">
            <a href='/pizzacutter/dashboard/' class="btn-large waves-effect waves-light red btn tooltipped" data-position="bottom" data-tooltip="Admin Home">
            <i class="material-icons large">home</i>

            </a>
        </div>

        <div class="col s6">
            <a href='/pizzacutter' class="btn-large waves-effect waves-light red btn tooltipped"
                data-position="bottom" data-tooltip="Exit Dashboard" id="home-button">
                <i class="material-icons large">meeting_room</i>
            </a>
        </div>

    </div>

    <h4 class="center">üõ†Ô∏è </h4>

    <h1 class="dashboard-header">Categories</h1>


    <section class="section admin_edit_section">

        <div class="row">
            <form class="col s12" id="category-input">
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">mode_edit</i>
                        <input id="category-name" type="text">
                        <label for="category-name">Add New Category</label>
                    </div>
                </div>
            </form>
        </div>

    </section>


    <div class="row">

        <div class="col s6">

            <table class="highlight category-table-items">
                <thead>
                    <tr>
                        <th id="save-cat-header">Saved Categories</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each categories}}

                    <tr>
                        <td>{{name}} <a class="waves-effect waves-light btn delete-button-category btn tooltipped "
                                data-position="bottom" data-tooltip="Delete Category" id-"delete-btn"><i
                                    class="material-icons" data-id={{id}}>delete</i></a>
                        </td>
                    </tr>

                    {{/each}}

                </tbody>


            </table>
        </div>
    </div>

</body>